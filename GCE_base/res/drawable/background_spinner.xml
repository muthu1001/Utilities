<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">
    <item><layer-list>
        <item>
            <shape>
                <solid
                    android:color="#ffffff">
                </solid>

                <corners android:radius="2dp" />

                <padding
                    android:bottom="10dp"
                    android:left="10dp"
                    android:right="10dp"
                    android:top="10dp" />
                <stroke
                    android:width="1dp"
                    android:color="@color/darkGrey"/>
            </shape>
        </item>
        <item android:drawable="@drawable/ic_drop_down_arrow"
            android:gravity="center_vertical|right"
            android:width="20dp"
            android:height="20dp"/>
    </layer-list></item>
</selector>